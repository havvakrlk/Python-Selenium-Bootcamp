# ....1. soru.....
# veri tipleri

# string = metin türü veri tipidir. örnek;
str1='havva'

# integer = tamsayı veri tipidir. örnek;  
b = 57

# float = ondalıklı sayı veri tipidir. örnek;
b = 57.2

#complex = karmaşık sayıların oluşturduğu veri tipidir. örnek ;
x = 3+4j

#list = değişik verileri içinde tutmamıza yarar. örnek;
liste =[1,2.5,2j]

#tuple = değişmez bir veri türüdür. örnek ;
a = ('python','havva')

#bool = doğru veya yanlış değerleri saklamak için kullanılan veri tipidir. örnek;
5==5
True

